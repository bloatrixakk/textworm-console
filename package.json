{
  "name": "textworm-console",
  "version": "1.0.1",
  "description": "Desktop editor for textworm-app",
  "author": "Bloatrix",
  "private": true,
  "homepage": "./",
  "devDependencies": {
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "electron-log": "^5.4.2",
    "electron-store": "^10.1.0",
    "electron-updater": "^6.6.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-scripts": "5.0.1",
    "shared-remote-utils": "file:../node-packages-local/shared-remote-utils",
    "web-vitals": "^2.1.4"
  },
  "main": "main.js",
  "scripts": {
    "start": "react-scripts start",
    "electron": "wait-on http://localhost:3000 && electron .",
    "dev": "concurrently \"npm start\" \"npm run electron\"",
    "build:react": "react-scripts build",
    "build:electron": "electron-builder",
    "build": "npm run build:react && npm run build:electron"
  },
  "repository": "https://github.com/bloatrixakk/textworm-console.git",
  "publishConfig": {
    "provider": "github",
    "releaseType": "release"
  },
  "build": {
    "compression": "maximum",
    "appId": "com.textworm.console",
    "files": [
      "build/**/*",
      "main.js",
      "preload.js",
      "updatePreload.js",
      "!**/*.map",
      "!**/__tests__/**",
      "!README.md"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extraMetadata": {
      "main": "main.js"
    },
    "win": {
      "target": "nsis",
      "icon": "public/textworm.ico"
    },
    "extraResources": [
      {
        "from": "build",
        "to": "build"
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "bloatrixakk",
        "repo": "textworm-console"
      }
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}